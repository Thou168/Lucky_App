<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stores.StoreDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">
        <ImageView
            android:id="@+id/backbar"
            android:src="@drawable/back_arrow"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginBottom="28dp"
            android:layout_width="20.21dp"
            android:layout_height="14dp"/>
        <TextView
            android:id="@+id/shopbar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:textSize="@dimen/dp_18"
            android:textAlignment="textStart"
            android:fontFamily="@font/opensans_semibold"
            android:text="VIP Storeâ€¦"
            android:textColor="#FFFFFF"
            android:layout_marginStart="49dp"/>
    </androidx.appcompat.widget.Toolbar>

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="vertical">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar"
            android:background="@drawable/msl__action_bar_shadow">

            <TextView
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:textSize="@dimen/dp_20"
                android:textAlignment="textStart"
                android:id="@+id/textview_shopname"
                android:textColor="#393939"
                android:fontFamily="@font/opensans_semibold"
                android:text="VIP Store Sen Sok 168"/>

            <TextView
                android:layout_marginTop="@dimen/dp_8dp"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@+id/textview_shopname"
                android:id="@+id/textview_shoplocation"
                android:fontFamily="@font/opensans_regular"
                android:textColor="#393939"
                android:text=""/>

            <TextView
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@+id/textview_shoplocation"
                android:id="@+id/textview_shopcontactphone"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="#393939"
                android:text="+855 77 000 000"/>

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:id="@+id/textview_shopview"-->
<!--                android:fontFamily="@font/opensans_regular"-->
<!--                android:textAlignment="textEnd"-->
<!--                android:textSize="11sp"-->
<!--                android:layout_marginTop="24dp"-->
<!--                android:text="@string/view"/>-->
<!--            <RelativeLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content">-->
                <RatingBar
                    android:id="@+id/rating_star"
                    android:layout_marginStart="111dp"
                    android:layout_marginTop="146dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/colorPrimary"
                    android:visibility="gone"
                    android:numStars="5"
                    android:rating="2.0"
                    style="@style/RatingBar" />
                <TextView
                    android:id="@+id/number_of_rate"
                    android:text="2.0"
                    android:textAlignment="viewEnd"
                    android:visibility="gone"
                    android:layout_marginStart="195dp"
                    android:layout_marginTop="146dp"
                    android:layout_marginBottom="9dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:textColor="#393939"
                    android:textSize="12dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="visible"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginBottom="9dp"
                    android:layout_marginEnd="12dp">
                    <TextView
                        android:id="@+id/view"
                        android:textSize="13dp"
                        android:text="12K"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_marginEnd="3dp"/>
                    <TextView
                        android:id="@+id/title_view"
                        android:text="@string/view"
                        android:textSize="13dp"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>


<!--        </LinearLayout>-->

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="-35dp">-->

<!--        </LinearLayout>-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user"
            android:layout_marginStart="30dp"
            android:background="#00000029"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="200dp" />

        <RelativeLayout
            android:id="@+id/relative_change"
            android:layout_width="match_parent"
            android:layout_below="@+id/img_user"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/best_match"
                android:textAlignment="textStart"
                android:layout_marginStart="@dimen/dp_15"
                android:text="@string/new_post"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:fontFamily="@font/opensans_regular"
                android:drawableRight="@drawable/ic_arrow_drop_down_gray"/>

            <ImageView
                android:id="@+id/filter_detail"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/dp_16"
                android:src="@drawable/filter"
                android:layout_marginEnd="123dp"
                android:layout_marginTop="2dp"
                android:layout_height="@dimen/dp_16"/>

            <TextView
                android:text="|"
                android:id="@+id/column"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="118.5dp"
                android:textColor="@color/gray_btn_bg_pressed_color"
                android:layout_width="1dp"
                android:layout_height="12dp"/>

            <ImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/img_list"
                android:src="@drawable/list_brown"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="83.13dp"
                android:layout_toStartOf="@+id/grid" />
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="49dp"
                android:layout_centerInParent="true"
                android:id="@+id/grid"
                android:src="@drawable/grid"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/btn_image"
                android:layout_marginEnd="15dp"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:src="@drawable/image" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_below="@+id/relative_change"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_new_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="visible"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/textViewAllPostNoMoreResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_new_post"
                android:padding="@dimen/dp_16"
                android:gravity="center"
                android:text="@string/no_more_result"
                app:layout_constraintTop_toBottomOf="@id/list_new_post"
                tools:ignore="MissingConstraints" />

            <ProgressBar
                android:layout_marginTop="50dp"
                android:id="@+id/progress_bar1"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="50dp"
                tools:ignore="MissingConstraints">
            </ProgressBar>

            <TextView
                android:visibility="gone"
                android:layout_marginTop="80dp"
                android:id="@+id/text1"
                android:text="@string/no_result"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>