<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bottomsheet_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_15">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_to_seller"
        android:textSize="18dp"
        android:fontFamily="@font/opensans_semibold"
        android:padding="@dimen/dp_15" />
    <View
        android:id="@+id/line"
        style="@style/line"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:id="@+id/call_phone1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:drawableStart="@drawable/ic_call_icon"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8" />
    <View
        android:id="@+id/line1"
        style="@style/line"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/call_phone2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:drawableLeft="@drawable/ic_call_icon"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:fontFamily="@font/opensans_regular"
        />
    <View
        android:id="@+id/line2"
        style="@style/line"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/call_phone3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:drawableLeft="@drawable/ic_call_icon"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:fontFamily="@font/opensans_regular"
        />

</LinearLayout>