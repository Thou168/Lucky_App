<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".settings.ContactActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/my_toolbar"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/tvBack_account"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_arrow"
            android:layout_marginEnd="@dimen/dp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_contact"
            android:textSize="18dp"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:gravity="center_vertical"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:layout_margin="@dimen/dp_15"
        android:fontFamily="@font/opensans_semibold"
        android:textColor="#333333"
        android:textSize="@dimen/dp_18"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address_contact_us"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:fontFamily="@font/opensans_regular"
        android:textColor="#333333"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact"
        android:layout_margin="@dimen/dp_15"
        android:fontFamily="@font/opensans_semibold"
        android:textColor="#333333"
        android:textSize="@dimen/dp_18"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/telephone_contact_us"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:fontFamily="@font/opensans_regular"
        android:textColor="#333333"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/telephone_2"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:fontFamily="@font/opensans_regular"
        android:textColor="#333333"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_margin="@dimen/dp_15"
        android:fontFamily="@font/opensans_semibold"
        android:textColor="#333333"
        android:textSize="@dimen/dp_18"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_contact_us"
        android:fontFamily="@font/opensans_regular"
        android:textColor="#333333"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/dp_15"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:layout_margin="@dimen/dp_15"
        android:fontFamily="@font/opensans_semibold"
        android:textColor="#333333"
        android:textSize="@dimen/dp_18"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/website_contact_us"
        android:fontFamily="@font/opensans_regular"
        android:textColor="#333333"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="15dp"/>

</LinearLayout>