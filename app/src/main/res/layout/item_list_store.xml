<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    app:strokeColor="#E8E8E8"
    app:strokeWidth="2dp"
    android:layout_marginBottom="@dimen/dp_16">
<!--    <View style="@style/line"/>-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="70dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_height="70dp" />
                <RelativeLayout
                    android:id="@+id/relative_view"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/android_vector">
                    <TextView
                        android:id="@+id/ds_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text="hello"
                        android:textColor="@color/white" />
                    </RelativeLayout>
            </RelativeLayout>
<!--            <ImageView-->
<!--                android:id="@+id/image"-->
<!--                android:layout_width="160dp"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:layout_height="match_parent" />-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title"
                    android:text="title"
                    android:lines="1"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_marginTop="9.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp" />
<!--                <TextView-->
<!--                    android:id="@+id/date"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@+id/title"-->
<!--                    android:layout_marginLeft="@dimen/dp_8"-->
<!--                    android:text="Phonm Penh - 2h ago"-->
<!--                    android:textSize="10dp" />-->
                <LinearLayout
                    android:id="@+id/llColor"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_below="@+id/tv_price"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_4">

                    <TextView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/rounded_textview"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/tv_color1" />
                    <TextView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/rounded_textview"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_marginLeft="-8dp"
                        android:id="@+id/tv_color2" />

                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_discount"
                    android:layout_below="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginRight="7dp"
                    android:text="$0.00"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_below="@id/title"
                    android:layout_toEndOf="@id/tv_discount"
                    android:text="$0.00"
                    android:textSize="15dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/cate"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="9dp"
                    android:visibility="visible"
                    android:textColor="#404040"
                    android:layout_toEndOf="@+id/llColor"
                    android:layout_below="@+id/tv_price"
                    android:text="Motorbike"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/item_type"
                    android:layout_width="52dp"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp"
                    android:text="123"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:fontFamily="@font/opensans_semibold"
                    android:background="@drawable/roundimage_rent" />
                <TextView
                    android:id="@+id/pending_appprove"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Pending"
                    android:textColor="#CCCCCC"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/item_type"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="11dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="@dimen/dp_15"/>
<!--                <LinearLayout-->
<!--                    android:orientation="vertical"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginRight="@dimen/dp_4"-->
<!--                    android:layout_alignParentBottom="true"-->
<!--                    android:layout_alignParentEnd="true">-->
<!--                    <TextView-->
<!--                        android:layout_gravity="right"-->
<!--                        android:textColor="@android:color/white"-->
<!--                        android:gravity="center"-->
<!--                        android:id="@+id/item_type"-->
<!--                        android:textSize="12dp"-->
<!--                        android:layout_width="30dp"-->
<!--                        android:layout_marginBottom="32dp"-->
<!--                        android:layout_height="15dp" />-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="11dp"
                        android:layout_height="@dimen/dp_18">
                        <TextView
                            android:id="@+id/user_view"
                            android:textSize="13sp"
                            android:text="0"
                            android:textColor="#393939"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"/>
                        <TextView
                            android:id="@+id/user_view1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#393939"
                            android:text="@string/view"
                            android:textSize="13sp" />
                    </LinearLayout>
<!--                </LinearLayout>-->
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_view"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#F4F4F4"
            android:layout_height="wrap_content">
<!--            <View style="@style/line"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal" >
                <Button
                    android:id="@+id/btn_renew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textAllCaps="false"
                    android:background="#00FFFFFF"
                    android:text="Renew"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:fontFamily="@font/opensans_semibold"/>
                <Button
                    android:id="@+id/btn_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="#00FFFFFF"
                    android:text="Remove"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:fontFamily="@font/opensans_semibold"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnedit_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/button_edit"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btndelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/sold"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
<!--        <View style="@style/line"-->
<!--            android:layout_marginBottom="@dimen/dp_16"/>-->
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>